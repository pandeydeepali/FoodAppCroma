<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="@dimen/bck_padd"
    android:paddingRight="@dimen/bck_padd"
    android:paddingTop="@dimen/universal_margin"
    android:paddingBottom="@dimen/universal_margin"
    android:clickable="true"
    android:orientation="vertical"

    >


    <TextView
        android:id="@+id/detailTitle"
        android:textColor="@color/title"
        android:textSize="@dimen/universal_margin1"
        android:textStyle="bold"
        android:text="supriya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login"
        />


    <TextView
        android:id="@+id/detailPrice"
        android:textColor="@color/title"
        android:textSize="@dimen/universal_margin1"
        android:textStyle="bold"
        android:text="price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login"
        android:layout_below="@+id/detailTitle"
        />


    <ImageView
        android:id="@+id/detailImg"
        android:src="@drawable/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>