<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/nav_add"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/minor_custom"
            >


            <com.rey.material.widget.ImageView
                android:id="@+id/regBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bck"
                android:paddingLeft="@dimen/bck_padd"

                />
            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/universal_margin4"
                android:textColor="@color/splash_color"
                android:text="@string/AddNav"
                android:layout_gravity="center"
                android:padding="@dimen/login"
                android:textSize="@dimen/universal_margin1"/>
        </android.support.v7.widget.Toolbar>

</LinearLayout>
    </LinearLayout>